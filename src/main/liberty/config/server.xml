<server description="Sample Liberty server">

  <featureManager>
      <feature>microprofile-1.2</feature>
      <feature>openidConnectClient-1.0</feature>
  </featureManager>

  <httpEndpoint httpPort="${default.http.port}" httpsPort="${default.https.port}"
      id="defaultHttpEndpoint" host="*" />
      
  <!-- Automatically expand WAR files and EAR files -->
  <applicationManager autoExpand="true"/>

  <webApplication name="orders" location="${app.location}"/>
           
  <openidConnectClient id="bluecomputeweb" 		
    clientId="bluecomputeweb" 		
    clientSecret="${env.SECRET}"
    authorizationEndpointUrl="${env.AUTH_ENDPOINT_URL}" 		
    tokenEndpointUrl="${env.TOKEN_ENDPOINT_URL}"
    userIdentifier="user_name"
    signatureAlgorithm="HS256"
    disableIssChecking="true"
    inboundPropagation="supported"> 	
 </openidConnectClient>
 
 <keyStore id="defaultKeyStore" password="yourPassword" />


</server>
